generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  password String
  role     String   @default("pending") // "pending" 初期値
  children Child[]
  createdAt DateTime @default(now()) 
}

model Child {
  id        String   @id @default(cuid())
  name      String
  birthDate DateTime
  gender    String
  school    String
  address   String?           // 任意：住所
  notes     String?           // 任意：特記事項やメモ
  allergy   String?           // 任意：アレルギー情報
  parentId  String
  parent    User     @relation(fields: [parentId], references: [id])
}
